{# ---- SEO ---- #}

{%- set absolutePageUrl -%}{{ page.url | absoluteURL }}{%- endset -%}

{%- if layout == 'work-page' -%}
    {# Auto-generate a description for work pages  #}
    {%- set autoDescription = description | removeLinks | safe -%}
{% endif %}

{# Page-Specific #}
<meta name="description" content="{{ description or autoDescription or site.description }}">
{%- if thumbnail -%}<meta name="image" content="{{ thumbnail | absoluteURL }}">{%- endif -%}

<meta property="og:title" content="{{ title or site.title }}">
<meta property="og:description" content="{{ shortDescription or autoDescription or site.description }}">
<meta property="og:url" content="{{ absolutePageUrl }}">
<meta property="og:image" content="{%- if thumbnail -%}{{ thumbnail | absoluteURL }}{%- else -%}{{ site.icon | absoluteURL }}{%- endif -%}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image:alt" content="{{ title or site.title }}">

{# General #}
<meta property="og:site_name" content="{{ site.title }}">

<link rel="canonical" href="{{ absolutePageUrl }}">

{# ---- Favicon ---- #}
<link rel="icon" type="image/svg+xml" href="/assets/images/favicon/favicon.svg?v=1">
<link rel="icon" type="image/png" href="/assets/images/favicon/favicon-48x48.png?v=1" sizes="48x48">
<link rel="icon" type="image/png" href="/assets/images/favicon/favicon-192x192.png?v=1" sizes="192x192">
<link rel="apple-touch-icon" href="/assets/images/favicon/favicon-192x192.png?v=1" sizes="192x192">
<link rel="mask-icon" href="/assets/images/favicon/favicon.svg?v=1" color="#f2f2f2">
<link rel="manifest" href="/site.webmanifest">
<meta name="theme-color" content="#f2f2f2"/>

