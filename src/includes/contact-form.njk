<form class="form form--contact" 
      name="contact" 
      method="POST" 
      netlify-honeypot="bot-field" 
      data-netlify="true">
    <div class="form__body">
        <div class="form__fields">
            <p class="form__field visually-hidden">
                <label>Don’t fill this out if you’re human</label>
                <input tabindex="-1" name="bot-field">
            </p>
            <p class="form__field">
                <label class="form__label visually-hidden">Your Name</label> 
                <input class="form__input" type="text" name="name" id="name" placeholder="Your Name">  
            </p>
            <p class="form__field">
                <label class="form__label visually-hidden">Your Email</label> 
                <input class="form__input" type="text" name="email" id="email" placeholder="Your Email">  
            </p>
            <p class="form__field--full">
                <label class="form__label visually-hidden">Subject</label> 
                <input class="form__input" type="text" name="subject" id="subject" placeholder="Subject">  
            </p>
            <p class="form__field--full">
                <label class="form__label visually-hidden">Share your thoughts</label> 
                <textarea class="form__input form__textarea" type="text" name="message" id="message" placeholder="Share your thoughts"></textarea>
            </p>
        </div>
        <div class="form__actions">
            <button class="button" type="submit">Send</button>
        </div>
    </div>
</form>